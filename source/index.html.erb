
<% content_for :title, "Valerian David - photographe" %>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('images/NYC-test.jpg')">
  <h1>Valerian David - Photographe</h1>
</div>
<div class="wraper">
  <div class="slideshow">
    <div class="carousel slide" data-ride="carousel">
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <%= image_tag "NYC-test.png", class: "d-block img-fluid"%>
        </div>
        <div class="item">
          <%= image_tag "card-paris.png", class: "d-block img-fluid"%>
        </div>
      </div>
    </div>

    <div class="controls">
      <a class="carousel-control-prev" href=".carousel" role="button" data-slide="prev">
        <i class="fa fa-arrow-left"></i>
      </a>
      <a class="carousel-control-next" href=".carousel" role="button" data-slide="next">
        <i class="fa fa-arrow-right"></i>
      </a>
    </div>
  </div>
</div>
